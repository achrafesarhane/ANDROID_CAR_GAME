<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/car_1"
    android:id="@+id/background">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textSize="40dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/scoreText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:layout_marginLeft="120dp"
        android:textSize="40dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/pointsScored"/>


    <ImageView
        android:id="@+id/show_vinyl"
        android:layout_width="90dp"
        android:layout_height="100sp"
        android:src="@drawable/vinyl_2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"

        android:layout_gravity="left|center_vertical" />

    <ImageView
        android:id="@+id/show_decal"
        android:layout_width="110dp"
        android:layout_height="320sp"
        android:src="@drawable/decals_1"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="25dp"

        android:layout_gravity="left|center_vertical"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotToMainMenu"
        android:text="Main Menu"
        android:layout_gravity="left|bottom" />

    <ImageView
        android:id="@+id/show_body"
        android:layout_width="110dp"
        android:layout_height="150sp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="25dp"
        android:background="@mipmap/opdress1"

        android:layout_gravity="left|bottom"
        />

    <ImageView
        android:id="@+id/show_head"
        android:layout_width="110dp"
        android:layout_height="50sp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="25dp"

        android:background="@mipmap/head1"
        android:layout_marginTop="120dp"

        android:layout_gravity="left|center_vertical"
        />


</FrameLayout>