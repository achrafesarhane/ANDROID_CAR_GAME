<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.iu.se.trafficruler.MainMenu">
    <LinearLayout
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:id="@+id/Rin"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5pt"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hello , "
                android:id="@+id/textView18"

                android:layout_toStartOf="@+id/txt_UserName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User"
                android:id="@+id/txt_UserName"
                />

        </LinearLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Go for Ride"
        android:id="@+id/btn_GFRMain"

         />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Quit Application"
        android:id="@+id/btn_QuitAppMain"
       />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign in as Different User "
        android:id="@+id/btn_SignIADiffUser"
         />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Display HighScores "
        android:id="@+id/btn_disHiScr"
        />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Daily Bonus"
            android:id="@+id/btn_daily"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />



    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Rin" />

</RelativeLayout>
