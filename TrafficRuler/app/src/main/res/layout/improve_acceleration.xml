<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/improve_acceleration_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oil_1"

            android:layout_margin="15dp"
            />
        <Button
            android:id="@+id/improve_acceleration_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oil_2"

            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/improve_acceleration_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oil_3"

            android:layout_margin="15dp"/>
    </LinearLayout>


</LinearLayout>
