<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/vehicle_select">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_Points"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/ImageButton01"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@mipmap/car_image"
        android:layout_marginTop="120dp"
        android:onClick="OnCarClick"
        android:clickable="true"
        android:layout_below="@+id/txt_Points"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_buttonCar"
        android:layout_below="@+id/ImageButton01"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:onClick="OnBackButtonClick"
        android:clickable="true"
        android:layout_marginTop="91dp" />
</RelativeLayout>