<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_tune_up_fragement"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/app_back">

    <Button
        android:layout_width="200sp"
        android:layout_height="50sp"

        android:text="@string/select_tune_up_button"
        android:id="@+id/select_tune_up_button"
        android:minHeight="92sp"
        android:textSize="22sp"
        android:background="#FFFFD2"
        android:textColor="#002D00"
        android:onClick="OnTuneUpClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_tune_up_panel"
        android:textColor="#252525"
        android:textColorHighlight="#1f1f1f"
        android:textSize="35sp"

        android:id="@+id/select_tune_up_textView"
        android:layout_marginTop="46sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="22sp"
        android:id="@+id/backtuneupfrag"
        android:textColor="#252525"
        android:background="#FFFFD2"


        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53sp"
        android:layout_toStartOf="@+id/select_tune_up_button" />


</RelativeLayout>
